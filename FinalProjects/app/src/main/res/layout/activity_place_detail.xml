<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapActivities.PlaceDetailActivity" android:background="@android:color/holo_blue_bright">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="272dp" tools:src="@tools:sample/backgrounds/scenic[1]"
            android:id="@+id/curplace_imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="395dp"
            android:layout_height="145dp" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/curplace_imageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout">
        <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/placename_Text" android:textSize="50dp"
                android:textStyle="bold" android:textColor="@android:color/black"/>
        <TextView
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/address_Text" android:textSize="25sp"
                android:textColor="@android:color/black"/>

    </LinearLayout>
    <Button
            android:text="Find Others"
            android:layout_width="128dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_button"
            android:id="@+id/search_btn" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="150dp" android:layout_marginStart="150dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="150dp"
            android:layout_marginRight="150dp"/>
</android.support.constraint.ConstraintLayout>